{% extends 'base.html.twig' %}
{% block title %}
	List Videos
{% endblock %}
 {% block stylesheets %}
 	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous"> 	
 {% endblock %}



{% block body %}
	
	<a href="{{ urlAdd }}">Add new</a>
	
	<i>{{ hi }}</i>
	<div class="container">
		
		<div class="row modal-header">
    		<div class="col-md-2">
    			Filename
    		</div>
    		<div class="col-md-2">
    			Subject
    		</div>
    		<div class="col-md-2">
    			Language of Video		
    		</div>
    		<div class="col-md-2">
    			Patient / Actor
    		</div>
    		<div class="col-md-2">
    			Transcripts
    		</div>
		</div>
		{% for video in videos %}
		<div class="row">			 
    		<div class="col-md-2">
    			<a href="{{ path('videoedit', {'videoId': video.id}) }}">{{video.filename}}</a>		
    		</div>
    		<div class="col-md-2">
    			<a href="{{ path('videosee',{'videoId': video.id}) }}">{{video.subjectname}}</a>
    		</div>
    		<div class="col-md-2">
    			{{video.language.lname}}		
    		</div>
    		<div class="col-md-2">
    			{{video.getPatientactTxt()}}
    		</div>  
    		<div class="col-md-2">
    			{% for trans in video.transcripts %}
    			    {{trans.lname}}  <i>{{trans.id}}</i>
    			{%  endfor %}
    		</div>   		 		
		</div>	
		{%  endfor %}
			
	</div>	

	
	
	
	
	
	<div class="footer">
		&copy;2017	
	</div>
{% endblock %}