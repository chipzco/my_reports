{% extends 'base.html.twig' %}
{% block title %}
	Invoice Reports
{% endblock %}
 {% block stylesheets %}
 	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous"> 	
 {% endblock %}

 {% block body %} 
 	<div class="container">
		<form action="{{ path('invoice_reportgen')}}" method="post">
			<label for="repgen">Report To Generate:</label> 
			<select name="reportgenerate" id="repgen">				
					{%  for x in 1..3  %}											
						<option value="{{ x }}" {% if x==2 %}selected="selected"{%  endif %}>Report {{ x }}</option>;					
					{%  endfor %}			
			</select>		
			<br />			
			<label for="sdate">Start Date:</label> <input id="sdate" type="text" name="date_from" />  
			<br/>
			<label for="edate">End Date: </label>    <input id="edate" type="text" name="date_to" /> 
			<br/>
			
			<input type="submit" value="SAVE" />		
		</form>
		
		<div>
			{%  for r in rep  %}
			<div>
				{{ dump(r) }}			
			
			</div>
			{%  endfor  %}
		
		
		
		</div>
		
		 
         <div class="footer">
        	&copy;2017	
        </div>
    </div>
{% endblock %}