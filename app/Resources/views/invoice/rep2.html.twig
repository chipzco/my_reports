

<div>
	{%  if repres.recordcount==0 %}
		No records found.
	
	{%  else  %}
		<table class="table table-hover table-sm">
			<caption>Invoice Headers</caption>
    		<thead><tr>    
                <th>Invoice Number</th>
    
                <th>Invoice Date</th>
    
                <th class="text-right">Invoice Amount</th>
                
                <th class="text-right">Sum</th>
                <th class="text-right">Discrepancy</th>   
            </tr></thead>
			
			<tbody>
			{%  for r in repres.records  %}
				<tr>
					
				<td>
					{{ r.invoicenum }}				
				</td>			
				<td>
					{{ r.invoicedate |date('Y-m-d') }} 				
				</td>
				<td class="text-right">
					{{ r.invoiceamount }}				
				</td>			
				<td class="text-right">
					{{ r.getSumInvoiceDetails() }}				
				</td>
				<td class="text-right">
					{{ r.getDiscrep() }}
				</td>
				</tr>
			{%  endfor  %}
			</tbody>	
		
		</div>
{%  endif %}		



	